<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--위치 권한-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!--음성 인식-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Compass_AAC"
        tools:targetApi="31">
        <activity
            android:name=".views.voiceaac.ChooseWordVoice"
            android:exported="false" />
        <activity
            android:name=".views.voiceaac.HearVoice"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.voiceaac.ShowSelectedWord"
            android:exported="false">
        </activity>
        <activity
            android:name=".views.voiceaac.ChooseWordPass"
            android:exported="false" >
        </activity>
        <activity
            android:name=".views.login.activity.RegisterMain"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".views.login.activity.LoginMain"
            android:exported="false" />
        <activity
            android:name=".views.login.activity.TitleActivity"
            android:exported="true" />
        <activity
            android:name=".views.urgencyaac.UrgencyCategory"
            android:exported="false" />
        <activity
            android:name=".views.dailyaac.DailyCategory"
            android:exported="false" />
        <activity
            android:name=".views.voiceaac.PassCategory"
            android:exported="false" />
        <activity
            android:name=".views.location.SearchLocation"
            android:exported="false" />
        <activity
            android:name=".views.splash.Splash"
            android:exported="false" />
        <activity
            android:name=".views.MainActivity"
            android:exported="false" />
    </application>

</manifest>